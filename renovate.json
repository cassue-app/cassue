{
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "automerge": true,
  "major": {
    "automerge": false
  },
  "dependencyDashboard": true,
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "ignoreDeps": [
    "next-pwa"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "slate",
        "slate-*"
      ],
      "groupName": "slate"
    }
  ]
}